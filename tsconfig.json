{
	"compilerOptions": {
		// "allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		// "isolatedModules": true,
		"jsx": "react",
		"lib": ["es6"],
		"moduleResolution": "node",
		// "noEmit": true,
		"strict": true,
		"target": "esnext",
		"outDir": "./dist",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": true,
		"declaration": true,
		"baseUrl": "./",
		"paths": {
			"react-native-data-provider": ["dist/"]
		}
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}